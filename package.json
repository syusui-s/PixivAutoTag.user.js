{
  "name": "pixiv-auto-tag",
  "version": "2.0.0",
  "description": "Pixivでブックマークタグ付け自動化してくれるUserScriptを書いたぞ！！",
  "main": "src/main.mjs",
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "rollup --config",
    "lint": "eslint src/ test/",
    "fix": "eslint --fix src/ test/",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register ./test/**/*.js",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "typecheck": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syusui-s/PixivAutoTag.user.js.git"
  },
  "author": "Shusui MOYATANI",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/syusui-s/PixivAutoTag.user.js/issues"
  },
  "homepage": "https://github.com/syusui-s/PixivAutoTag.user.js#readme",
  "devDependencies": {
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chokidar": "^3.4.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^10.5.2",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rollup": "^2.34.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "hyperapp": "^2.0.8",
    "hyperx": "^2.5.4"
  },
  "lint-staged": {
    "{src,test}/*.js": [
      "npm run fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  }
}
